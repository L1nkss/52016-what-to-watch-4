{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": ".dist",
    "sourceMap": true,
    "module": "commonjs",
    "target": "es2016",
    "jsx": "react",
    "baseUrl": "./",
    "paths": {
      "@components/*": ["src/components/*"],
      "@hocs/*": ["src/hocs/*"],
      "@utils/*": ["src/utils/*"],
      "@reducer/*": ["src/reducer/*"]
    },
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
